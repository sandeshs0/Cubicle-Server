# Email Configuration
# SMTP Server Settings
EMAIL_HOST=smtp.example.com  # e.g., smtp.gmail.com, smtp.office365.com
EMAIL_PORT=587               # Common ports: 587 (TLS), 465 (SSL), 25 (not recommended)
EMAIL_SECURE=false          # true for port 465, false for other ports
EMAIL_IGNORE_TLS=false       # Set to true if your SMTP server doesn't support STARTTLS

# SMTP Authentication
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-app-password  # Use an app password for Gmail

# Email Sender Information
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME='Cubicle App'

# Connection Timeouts (in milliseconds)
EMAIL_CONNECTION_TIMEOUT=10000  # 10 seconds
EMAIL_GREETING_TIMEOUT=10000    # 10 seconds
EMAIL_SOCKET_TIMEOUT=60000      # 60 seconds

# Debugging
EMAIL_DEBUG=false  # Set to true to see SMTP traffic in console
